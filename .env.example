# Diagram Bridge MCP Server Configuration

# External ports for services
PORT=3000                    # MCP Server external port
KROKI_PORT=8000             # Kroki service external port

# Environment settings
NODE_ENV=production
LOG_LEVEL=info

# Kroki settings
KROKI_URL=http://kroki:8000  # Internal URL (don't change unless using external Kroki)
KROKI_USE_LOCAL=true
KROKI_TIMEOUT=30000
KROKI_MAX_RETRIES=3
KROKI_CLOUD_FALLBACK=false

# Limits
MAX_CODE_LENGTH=5242880      # 5MB max diagram code size
